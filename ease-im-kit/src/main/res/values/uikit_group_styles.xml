<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ease_group_create_bottom_sheet">
        <item name="android:background">@drawable/uikit_dialog_create_group_bg</item>
    </style>

    <style name="ease_group_create_bottom_sheet_save">
        <item name="android:textAppearance">@style/Ease.TextAppearance.Body.Medium</item>
        <item name="android:textColor">@color/uikit_selector_text_change_1_bg</item>
    </style>

    <style name="ease_group_list_title">
        <item name="android:textAppearance">@style/Ease.TextAppearance.Body.Large</item>
        <item name="android:textColor">@color/ease_group_list_title_color</item>
    </style>

    <style name="ease_group_detail_arrow_item">
        <item name="background">@color/ease_color_background</item>
        <item name="arrowItemTitleSize">16sp</item>
        <item name="arrowItemTitleStyle">bold</item>
        <item name="arrowItemTitleColor">@color/ease_group_arrow_item_title_color</item>
        <item name="arrowItemShowDivider">true</item>
        <item name="arrowItemContentColor">@color/ease_group_arrow_item_content_color</item>
    </style>

    <style name="ease_group_detail_switch_item">
        <item name="background">@color/ease_color_background</item>
        <item name="switchItemTitleSize">16sp</item>
        <item name="switchItemTitleStyle">bold</item>
        <item name="switchItemTitleColor">@color/ease_group_switch_item_title_color</item>
        <item name="switchItemShowAvatar">false</item>
        <item name="switchItemShowDivider">true</item>
    </style>

    <style name="ease_group_detail_custom_layout_item_root">
        <item name="android:background">@drawable/uikit_detail_item_bg_radius8</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ease_group_detail_custom_layout_item_icon_style">
        <item name="android:layout_width">@dimen/ease_size_32</item>
        <item name="android:layout_height">@dimen/ease_size_32</item>
        <item name="android:tint">@color/ease_color_primary</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ease_group_detail_custom_layout_item_title">
        <item name="android:textAppearance">@style/Ease.TextAppearance.Body.ExtraSmall</item>
        <item name="android:textColor">@color/ease_group_detail_custom_layout_item_title_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">8</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ease_group_edit_tv_save">
        <item name="android:textAppearance">@style/Ease.TextAppearance.Body.Large</item>
        <item name="android:textColor">@color/uikit_selector_text_change_1_bg</item>
    </style>

    <style name="ease_group_edit_name">
        <item name="android:textAppearance">@style/Ease.TextAppearance.Body.Large</item>
        <item name="android:textColor">@color/ease_group_detail_edit_text_color</item>
        <item name="android:background">@drawable/uikit_group_edit_bg</item>
        <item name="android:textColorHint">@color/ease_group_detail_edit_hint_text_color</item>
        <item name="android:inputType">text</item>
        <item name="android:minHeight">@dimen/ease_size_36</item>
    </style>

    <style name="ease_group_edit_des">
        <item name="android:textAppearance">@style/Ease.TextAppearance.Body.Large</item>
        <item name="android:textColor">@color/ease_group_detail_edit_text_color</item>
        <item name="android:maxLength">512</item>
        <item name="android:background">@drawable/uikit_group_edit_bg</item>
        <item name="android:textColorHint">@color/ease_group_detail_edit_hint_text_color</item>
    </style>

    <style name="ease_group_edit_tv_input_count">
        <item name="android:textAppearance">@style/Ease.TextAppearance.Body.Large</item>
        <item name="android:textColor">@color/ease_group_detail_edit_input_count</item>
    </style>

    <style name="ease_group_member_add_action">
        <item name="android:src">@drawable/icon_add_member</item>
    </style>

    <style name="ease_group_member_remove_action">
        <item name="android:src">@drawable/uikit_remove_member</item>
    </style>

    <style name="ease_group_member_add_count">
        <item name="android:textAppearance">@style/Ease.TextAppearance.Label.Medium</item>
        <item name="android:textColor">@color/uikit_selector_add_text_change_color</item>
    </style>

    <style name="ease_group_member_remove_count">
        <item name="android:textAppearance">@style/Ease.TextAppearance.Label.Medium</item>
        <item name="android:textColor">@color/uikit_selector_remove_text_change_color</item>
    </style>

    <style name="ease_thread_arrow_item">
        <item name="background">@color/ease_color_background</item>
        <item name="arrowItemTitleSize">14sp</item>
        <item name="arrowItemTitleColor">@color/ease_contact_arrow_item_content_color</item>
        <item name="arrowItemContentColor">@color/ease_contact_arrow_item_content_color</item>
    </style>

</resources>