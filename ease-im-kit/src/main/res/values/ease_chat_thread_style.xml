<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ease_chat_thread_list_title">
        <item name="android:textAppearance">@style/Ease.TextAppearance.Title.Small</item>
        <item name="android:textColor">@color/ease_color_on_background_low</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxEms">64</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/ease_size_11</item>
        <item name="android:layout_marginStart">@dimen/ease_size_16</item>
    </style>

    <style name="ease_chat_thread_list_name">
        <item name="android:textAppearance">@style/Ease.TextAppearance.Label.Medium</item>
        <item name="android:textColor">@color/ease_color_text_secondary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/ease_size_2</item>
        <item name="android:layout_marginEnd">@dimen/ease_size_16</item>
    </style>

    <style name="ease_chat_thread_list_count">
        <item name="android:textAppearance">@style/Ease.TextAppearance.Label.Small</item>
        <item name="android:textColor">@color/ease_color_primary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginEnd">@dimen/ease_size_2</item>
    </style>

    <style name="ease_chat_thread_list_count_icon">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:src">@drawable/ease_topic_count_icon</item>
        <item name="android:layout_marginEnd">@dimen/ease_size_16</item>
    </style>

    <style name="ease_chat_thread_region_view_title">
        <item name="android:textAppearance">@style/Ease.TextAppearance.Label.Small</item>
        <item name="android:textColor">@color/ease_color_on_background</item>
    </style>

    <style name="ease_chat_thread_region_view_count">
        <item name="android:textAppearance">@style/Ease.TextAppearance.Label.Small</item>
        <item name="android:textColor">@color/ease_color_primary</item>
    </style>

    <style name="ease_chat_thread_region_view_content">
        <item name="android:textAppearance">@style/Ease.TextAppearance.Label.Medium</item>
        <item name="android:textColor">@color/ease_color_text_secondary_high</item>
    </style>

</resources>