<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ease_list_item_root">

    <com.hyphenate.easeui.widget.EaseArrowItemView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/header_item"
        app:arrowItemTitle="@string/ease_new_invitation_title"
        app:arrowItemAvatarHeight="40dp"
        app:arrowItemAvatarWidth="40dp"
        style="@style/ease_contact_header_item"/>

    <RelativeLayout
        android:id="@+id/rl_unread_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header_item"
        app:layout_constraintBottom_toBottomOf="@+id/header_item"
        android:layout_marginEnd="35dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unread_count"
            android:gravity="center"
            tools:text="99+"
            style="@style/ease_contact_list_header_unread_count"
            />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>