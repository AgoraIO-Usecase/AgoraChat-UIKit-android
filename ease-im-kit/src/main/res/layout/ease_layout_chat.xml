<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <io.agora.uikit.feature.chat.widgets.EaseChatMessageListLayout
        android:id="@+id/layout_chat_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/layout_menu"/>

    <io.agora.uikit.feature.chat.widgets.EaseChatInputMenu
        android:id="@+id/layout_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <io.agora.uikit.feature.chat.widgets.EaseChatNotificationView
        android:id="@+id/layout_notification"
        android:layout_above="@id/layout_menu"
        style="@style/ease_chat_notification_style" />

</RelativeLayout>