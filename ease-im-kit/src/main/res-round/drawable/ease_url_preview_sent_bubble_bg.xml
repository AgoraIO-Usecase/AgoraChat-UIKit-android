<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- transparent background -->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="@dimen/ease_size_40"
                android:height="@dimen/ease_size_36"/>
        </shape>
    </item>

    <!-- rectangle background -->
    <item
        >
        <shape android:shape="rectangle">
            <solid android:color="@color/ease_color_primary"/>
            <corners
                android:bottomLeftRadius="@dimen/ease_size_4"
                android:bottomRightRadius="@dimen/ease_size_4"/>
            <size
                android:width="@dimen/ease_size_40"
                android:height="@dimen/ease_size_36"/>
        </shape>
    </item>

</layer-list>