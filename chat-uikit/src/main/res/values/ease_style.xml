<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar.PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">@color/ease_msg_text_timestamp_color</item>
        <item name="android:textSize">12sp</item>
        <!--<item name="android:background">@drawable/ease_timestampe_bg</item>-->
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="chat_text_send_status_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/ease_msg_status_icon_margin_bottom_bubble</item>
        <item name="android:layout_marginEnd">@dimen/ease_msg_status_icon_margin_bubble</item>
    </style>

    <style name="chat_location_content_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="ease_row_sent_iv_fail_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">@dimen/ease_msg_status_icon_margin_bubble</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ease_msg_state_failed_resend</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ease_row_sent_iv_userhead_style">
        <item name="android:layout_width">@dimen/ease_chat_avatar_size</item>
        <item name="android:layout_height">@dimen/ease_chat_avatar_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">@dimen/ease_chat_avatar_margin</item>
        <item name="android:src">@drawable/ease_default_avatar</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="ease_row_receive_iv_userhead_style">
        <item name="android:layout_width">@dimen/ease_chat_avatar_size</item>
        <item name="android:layout_height">@dimen/ease_chat_avatar_size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">@dimen/ease_chat_avatar_margin</item>
        <item name="android:src">@drawable/ease_default_avatar</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ease_chat_input_button_size">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="ease_msg_text_file_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/ease_msg_file_name_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_from_bottom_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_from_bottom_anim_in</item>
        <!-- <item name="android:windowExitAnimation">@anim/dialog_from_bottom_anim_out</item>-->
    </style>

    <style name="message_menu_popup_window_anim_style">
        <item name="android:windowEnterAnimation">@anim/message_menu_popupwindow_show_anim</item>
        <item name="android:windowExitAnimation">@anim/message_menu_popupwindow_hidden_anim</item>
    </style>

    <style name="bubble_inner_start_top_end_margin">
        <item name="android:layout_marginStart">@dimen/ease_chat_bubble_margin_12</item>
        <item name="android:layout_marginEnd">@dimen/ease_chat_bubble_margin_12</item>
        <item name="android:layout_marginTop">@dimen/ease_chat_bubble_margin_12</item>
    </style>

    <style name="bubble_inner_start_bottom_end_margin">
        <item name="android:layout_marginStart">@dimen/ease_chat_bubble_margin_12</item>
        <item name="android:layout_marginEnd">@dimen/ease_chat_bubble_margin_12</item>
        <item name="android:layout_marginBottom">@dimen/ease_chat_bubble_margin_12</item>
    </style>

    <style name="Dialog.Light" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#005FFF</item>
    </style>

    <style name="ease_editText_Underline">
        <item name="colorControlNormal">@color/ease_edit_line_color</item>
        <item name="colorControlActivated">@color/ease_edit_line_color</item>
    </style>

</resources>