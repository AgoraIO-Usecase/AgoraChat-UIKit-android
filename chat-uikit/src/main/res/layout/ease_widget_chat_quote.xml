<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ease_bg_chat_top_extend_background">

    <ImageView
        android:id="@+id/cancel_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/quote_reply_to"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ease_chat_inputmenu_quote_cancel_icon"/>

    <TextView
        android:id="@+id/quote_reply_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cancel_select"
        app:layout_constraintEnd_toStartOf="@id/quote_name"
        app:layout_constraintTop_toTopOf="@id/cancel_select"
        app:layout_constraintBottom_toBottomOf="@id/cancel_select"
        android:layout_marginStart="10dp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:text="@string/ease_chat_inputmenu_quote_reply_to"
        android:textColor="@color/ease_chat_top_extend_text_name_color"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/quote_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/quote_reply_to"
        app:layout_constraintTop_toTopOf="@id/cancel_select"
        app:layout_constraintEnd_toStartOf="@id/quote_image"
        app:layout_constraintBottom_toBottomOf="@id/cancel_select"
        app:layout_constrainedWidth="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="12dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        tools:text="nick：[Video]"
        android:textColor="@color/ease_chat_top_extend_text_name_color"
        android:textSize="12sp"/>

    <io.agora.chat.uikit.widget.EaseImageView
        android:id="@+id/quote_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        app:ease_shape_type="rectangle"
        app:ease_radius="2dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/quote_icon"
        android:src="@drawable/ease_video_play_small_for_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/quote_image"
        app:layout_constraintBottom_toBottomOf="@id/quote_image"
        app:layout_constraintStart_toStartOf="@id/quote_image"
        app:layout_constraintEnd_toEndOf="@id/quote_image"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/quote_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/cancel_select"
        app:layout_constraintTop_toBottomOf="@id/cancel_select"
        app:layout_constraintEnd_toStartOf="@id/quote_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        app:layout_constrainedWidth="true"
        android:layout_marginEnd="12dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        tools:text="nick：[Video]"
        android:textColor="@color/ease_chat_top_extend_text_color"
        android:textSize="12sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>