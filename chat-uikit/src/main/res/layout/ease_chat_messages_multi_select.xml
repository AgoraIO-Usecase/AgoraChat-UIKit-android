<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_multi_select_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_multi_select_forward"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:src="@drawable/ease_chat_item_menu_delete"
        android:layout_marginStart="4dp"
        style="@style/ease_chat_messages_multi_select_menu_style" />

    <ImageView
        android:id="@+id/iv_multi_select_forward"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_multi_select_delete"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ease_chat_item_menu_forward"
        android:layout_marginEnd="4dp"
        style="@style/ease_chat_messages_multi_select_menu_style"/>

</androidx.constraintlayout.widget.ConstraintLayout>